@page "/users/jorson/games"

<link href="css/jorson/styles.css" rel="stylesheet" />

@if (_games is not null)
{
    <div id="body">
        <a href="/users/jorson">&larr; Back to Home</a>
        <h1>Games</h1>
        <div>
            <ul>
                @foreach (var game in _games)
                {
                    <li>
                        <a href="@($"/users/jorson/games/{String.Join('-', game.ToLower().Split(' '))}")">@game</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}